@using QuickOrderSystemClassLibrary
@using QuickOrderSystemCustomerApp.Data
@inject NavigationManager NavManager
@inject ProductCartService CartService

<div class="product-card-container">
    <div class="product-card">
        <div class="product-image">
            @if (!string.IsNullOrEmpty(Product.ImageData))
            {
                <img src="data:image/png;base64,@Product.ImageData" alt="@Product.Name" />
            }
            else
            {
                <div class="no-image">No image available</div>
            }
        </div>
        <div class="product-info">
            <span class="product-name">@Product.Name</span>
            <div class="product-details">
                <span class="product-price">@Product.Price CHF</span>
                <div class="add-circle" @onclick="AddToCart">
                    <div class="plus-line horizontal"></div>
                    <div class="plus-line vertical"></div>
                </div>

            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Product Product { get; set; }

    private async Task AddToCart()
    {
        await CartService.AddProductToCartAsync(Product);
    }
}

<style>
    .product-card-container {
        width: 50%;
        padding: 0.5rem;
        box-sizing: border-box;
    }

    .product-card {
        width: 100%;
        height: 200px;
        background-color: #FFFFFF;
        padding: 1rem;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: start;
        border-radius: 10px;
        overflow: hidden;
        justify-content: space-between;
        box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.1);
    }

    .product-details {
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;
        position: relative;
    }

    .product-name {
        font-weight: bold;
        margin-bottom: 0.5rem;
        margin-top: 0.2rem;
        align-self: start;
        font-size: 1.1rem;
    }

    .product-price {
        align-self: start;
        font-size: 0.9rem;
    }
    
    .product-card img {
        max-width: 100%;
        height: auto;
    }

    .product-image {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .product-image {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .product-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100%;
    }

    .add-circle {
        width: 25px;
        height: 25px;
        position: absolute;
        top: 0;
        right: 0;
        background-color: #F59D07;
        cursor: pointer;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .plus-line {
        position: absolute;
        background-color: #FFFFFF;
        width: 12px;
        height: 2.5px;
        border-radius: 100px;
    }

    .horizontal {
        transform: rotate(0deg);
    }

    .vertical {
        transform: rotate(90deg);
    }
</style>