@inject NavigationManager NavManager

<div class="container">
    <div class="left-icon">
        <img src="Images/Icons/SuissFlag.png" alt="White Icon" />
    </div>
    <div class="text-section">
        <div class="home-text">Home</div>
    </div>
    <div class="right-icon">
        <button class="yellow-button" @onclick="NavigateToOrder">
            <img src="Images/Icons/ShoppingCard.png" alt="Icon" />
        </button>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    private void NavigateToOrder()
    {
        NavManager.NavigateTo("/shoppingCart");
    }
}

<style>
    .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .left-icon img {
        width: 40px;
        height: 40px;
        margin-right: 10px;
        border-radius: 10px;
    }

    .text-section {
        display: flex;
        flex-direction: column;
    }

    .home-text {
        font-size: 24px;
        font-weight: bold;
    }

    .yellow-button {
        background-color: #F59D07;
        border: none;
        border-radius: 10px;
        padding: 10px;
        cursor: pointer;
        display: flex;
        align-items: center;
    }

    .yellow-button img {
        width: 20px;
        height: 20px;
    }
</style>
